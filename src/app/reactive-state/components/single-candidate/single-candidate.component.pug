.container
  mat-card
    ng-container(*ngIf='candidate$ | async as candidate')
      img([src]='candidate.imageUrl', [alt]='candidate.firstName + " " + candidate.lastName')
      .employee-info
        h1 {{candidate.firstName}} {{candidate.lastName}}
        h2 {{candidate.job}} - {{candidate.department}} chez {{candidate.company}}
        h3 Contact : {{candidate.email}}
      mat-card-actions
        mat-spinner(*ngIf='loading$ | async ; else buttons')
        ng-template(#buttons)
          .action-buttons
            button(mat-flat-button, color='accent', (click)='onHire()') EMBAUCHER
            button(mat-flat-button, color='warn', (click)='onRefuse()') REFUSER
          .back
            button(mat-flat-button, color='primary', (click)='onGoBack()') RETOUR
